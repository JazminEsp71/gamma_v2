@page
@model Gamma.System.WebSite.Pages.Maquinas.DeleteModel

<div class="container-fluid">
    <h2>Eliminar Máquina</h2>
    <h3>¿Está seguro que desea eliminar esta máquina?</h3>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Maquina.Id</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Maquina.Nombre</dd>

                <dt class="col-sm-3">Operador 1:</dt>
                <dd class="col-sm-9">@Model.Maquina.Operador1</dd>

                <dt class="col-sm-3">Operador 2:</dt>
                <dd class="col-sm-9">@Model.Maquina.Operador2</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Model.Maquina.Estado</dd>

                <dt class="col-sm-3">Capacidad Máxima:</dt>
                <dd class="col-sm-9">@Model.Maquina.CapacidadMaxima</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Maquina.Id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>