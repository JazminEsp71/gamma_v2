@page
@model Gamma.System.WebSite.Pages.Maquinas.IndexModel

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Listado de Máquinas</h2>
        <a asp-page="./Edit" class="btn btn-success">Nueva Máquina</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Operador 1</th>
                <th>Operador 2</th>
                <th>Estado</th>
                <th>Capacidad Máxima</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var maquina in Model.Maquinas)
            {
                <tr>
                    <td>@maquina.Id</td>
                    <td>@maquina.Nombre</td>
                    <td>@maquina.Operador1</td>
                    <td>@maquina.Operador2</td>
                    <td>
                            <span class="badge @(maquina.Estado == "Disponible" ? "bg-success" :
                                               maquina.Estado == "En uso" ? "bg-warning" : "bg-danger")">
                                @maquina.Estado
                            </span>
                    </td>
                    <td>@maquina.CapacidadMaxima</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@maquina.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@maquina.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        <a asp-page="./Details" asp-route-id="@maquina.Id" class="btn btn-sm btn-info">Detalles</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>