@page
@model Gamma.System.WebSite.Pages.Modelos.DeleteModel

<div class="container-fluid">
    <h2>Eliminar Modelo</h2>
    <h3>¿Está seguro que desea eliminar este modelo?</h3>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Modelo.IdModelo</dd>

                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.Modelo.Nombre</dd>

                <dt class="col-sm-3">Código Suela:</dt>
                <dd class="col-sm-9">@Model.Modelo.CodigoSuela</dd>

                <dt class="col-sm-3">Corrida Numérica:</dt>
                <dd class="col-sm-9">@Model.Modelo.CorridaNumerica</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Modelo.IdModelo" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>