@page
@model Gamma.System.WebSite.Pages.Clientes.EditModel

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>@(Model.Cliente.IdCliente == 0 ? "Nuevo Cliente" : "Editar Cliente")</h2>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="Cliente.IdCliente" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Cliente.Nombre" class="form-label">Nombre</label>
                <input asp-for="Cliente.Nombre" class="form-control" />
                <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Cliente.Telefono" class="form-label">Teléfono</label>
                <input asp-for="Cliente.Telefono" class="form-control" />
                <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label asp-for="Cliente.Direccion" class="form-label">Dirección</label>
                <textarea asp-for="Cliente.Direccion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}