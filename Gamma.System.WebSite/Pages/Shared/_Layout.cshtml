<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gamma System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">Gamma System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Context.Session.GetString("UsuarioId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Ordenes/Index">Órdenes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Clientes/Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Maquinas/Index">Máquinas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Modelos/Index">Modelos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Colores/Index">Colores</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (Context.Session.GetString("UsuarioId") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link">Bienvenido, @Context.Session.GetString("NombreUsuario")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Logout">Cerrar Sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Iniciar Sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Gamma System
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>