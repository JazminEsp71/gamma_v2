<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gamma System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark">
        <div class="sidebar-header text-center py-4">
            <h4>Gamma System</h4>
        </div>

        <ul class="list-unstyled components">
            <li class="active">
                <a href="/"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
            </li>
            <li>
                <a href="#ordenesSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                    <i class="bi bi-file-earmark-text me-2"></i> Órdenes
                </a>
                <ul class="collapse list-unstyled" id="ordenesSubmenu">
                    <li>
                        <a href="/Ordenes"><i class="bi bi-list-ul me-2"></i> Listado</a>
                    </li>
                    <li>
                        <a href="/Ordenes/Create"><i class="bi bi-plus-circle me-2"></i> Nueva Orden</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/Clientes"><i class="bi bi-people me-2"></i> Clientes</a>
            </li>
            <li>
                <a href="/Maquinas"><i class="bi bi-cpu me-2"></i> Máquinas</a>
            </li>
            <li>
                <a href="/Modelos"><i class="bi bi-diagram-3 me-2"></i> Modelos</a>
            </li>
            <li>
                <a href="/Colores"><i class="bi bi-palette me-2"></i> Colores</a>
            </li>
        </ul>
    </nav>

    <!-- Page Content -->
    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn btn-dark">
                    <i class="bi bi-list"></i>
                </button>

                <div class="ms-auto d-flex align-items-center">
                    <span class="me-3 d-none d-sm-inline">@Context.Session.GetString("NombreUsuario")</span>
                    <a href="/Logout" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Salir
                    </a>
                </div>
            </div>
        </nav>

        <div class="container-fluid px-4 py-3">
            @RenderBody()
        </div>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container text-center">
        &copy; @DateTime.Now.Year - Gamma System
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>