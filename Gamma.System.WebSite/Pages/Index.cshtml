@page
@model Gamma.System.WebSite.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h1 class="mt-4">Panel Principal</h1>

    <div class="row mt-4">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="ordenes-tab" data-bs-toggle="tab" data-bs-target="#ordenes" type="button" role="tab">Órdenes</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="clientes-tab" data-bs-toggle="tab" data-bs-target="#clientes" type="button" role="tab">Clientes</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="maquinas-tab" data-bs-toggle="tab" data-bs-target="#maquinas" type="button" role="tab">Máquinas</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="modelos-tab" data-bs-toggle="tab" data-bs-target="#modelos" type="button" role="tab">Modelos</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="colores-tab" data-bs-toggle="tab" data-bs-target="#colores" type="button" role="tab">Colores</button>
                </li>
            </ul>

            <div class="tab-content mt-3" id="myTabContent">
                <!-- Tab de Órdenes -->
                <div class="tab-pane fade show active" id="ordenes" role="tabpanel">
                    <h4>Listado de Órdenes</h4>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <!-- Datos de ejemplo -->
                        <tr>
                            <td>1</td>
                            <td>Cliente A</td>
                            <td>2023-10-01</td>
                            <td><span class="badge bg-success">Completado</span></td>
                            <td>
                                <button class="btn btn-sm btn-primary">Ver</button>
                                <button class="btn btn-sm btn-warning">Editar</button>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Cliente B</td>
                            <td>2023-10-02</td>
                            <td><span class="badge bg-warning">En proceso</span></td>
                            <td>
                                <button class="btn btn-sm btn-primary">Ver</button>
                                <button class="btn btn-sm btn-warning">Editar</button>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Tab de Clientes -->
                <div class="tab-pane fade" id="clientes" role="tabpanel">
                    <h4>Listado de Clientes</h4>
                    <!-- Similar estructura para clientes -->
                </div>

                <!-- Tab de Máquinas -->
                <div class="tab-pane fade" id="maquinas" role="tabpanel">
                    <h4>Listado de Máquinas</h4>
                    <!-- Similar estructura para máquinas -->
                </div>

                <!-- Tab de Modelos -->
                <div class="tab-pane fade" id="modelos" role="tabpanel">
                    <h4>Listado de Modelos</h4>
                    <!-- Similar estructura para modelos -->
                </div>

                <!-- Tab de Colores -->
                <div class="tab-pane fade" id="colores" role="tabpanel">
                    <h4>Listado de Colores</h4>
                    <!-- Similar estructura para colores -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Activar los tabs de Bootstrap
        var tabElms = document.querySelectorAll('button[data-bs-toggle="tab"]');
        tabElms.forEach(function(tabEl) {
            tabEl.addEventListener('click', function (event) {
                event.preventDefault();
                var tab = new bootstrap.Tab(tabEl);
                tab.show();
            });
        });
    </script>
}